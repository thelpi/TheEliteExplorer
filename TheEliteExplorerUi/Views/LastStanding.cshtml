@model TheEliteExplorerUi.Models.StandingWrViewData

<div class="dual-box" style="width:auto">
    <div id="point-rankings" style="width:auto">
        <table style="width:auto">
            <tbody>
                <tr>
                    <th>Rank</th>
                    <th>Player</th>
                    <th>Stage</th>
                    <th>Level</th>
                    <th>Times</th>
                    <th>Date</th>
                    <th>End date</th>
                    <th>Days</th>
                    <th>Slayer</th>
                </tr>
                @{
                    int rank = 1;
                }
                @foreach (var item in Model.TopDetails)
                {
                <tr>
                    <td class="rank">@rank</td>
                    <td>
                        <a style="color:#@item.PlayerColor">@item.PlayerName</a>
                    </td>
                    <td>@item.Stage.ToString()</td>
                    <td>@item.Level.ToString()</td>
                    <td>@string.Join(", ", item.EntryTimes.Select(x => x.ToString(@"mm")))</td>
                    <td>@item.EntryDate.ToString("yyyy-MM-dd")</td>
                    <td>@(item.EndDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td><strong>@item.EntryDays</strong></td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.SlayerName))
                        {
                            <a style="color:#@item.SlayerColor">@item.SlayerName</a>
                        }
                    </td>
                </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
</div>
